extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sRepair/_sRepair.pug
include ../blocks/sBrends/_sBrends.pug
include ../blocks/sCalc/_sCalc.pug
include ../blocks/sSeo/_sSeo.pug
include ../blocks/sCerts/_sCerts.pug
include ../blocks/sMap/_sMap.pug
include ../blocks/sTags/_sTags.pug
include ../blocks/sUsefull/_sUsefull.pug
include ../blocks/sCall/_sCall.pug
include ../blocks/sTech/_sTech.pug
include ../blocks/sPrice/_sPrice.pug
include ../blocks/sTechBrend/_sTechBrend.pug
include ../blocks/sInstructions/_sInstructions.pug
include ../blocks/sAlso/_sAlso.pug

block variables
	- let  mainPage='bg-light'
	- let  bg= '02.png'

block title
	- let  title= '02-brends'
	title= title
block pagecontent
	+mob-mnu()
	+header()
		+topLine()
		+top-nav()
		+bot-nav()
	+headerBlock()
	+b.page-head
		.container
			+breadcrumb('Главная', 'Ремонт бензогенераторов', 'Ремонт бензогенераторов Stihl')
			+e.title-row.row
				.col-sm-auto
					+e.brand-img
						img(loading='lazy' src="img/@2x/brend-img.png" alt="")
				.col-sm
					+b.section-title.pb-0
						h1
							| Ремонт бензиновых
							br
							| генераторов Stihl
			+e.row.row
				+e.sidebar-col.col-lg-3
					+e.sidebar
						+e.s-item(href="#") Ремонт бензогенераторов
						+e.s-item(href="#") Ремонт триммеров
						+e.s-item(href="#") Ремонт бензопил
						+e.s-item(href="#") Ремонт бензорезов
						+e.s-item(href="#") Ремонт виброплит
						+e.s-item(href="#") Ремонт газонокосилок
						+e.s-item(href="#") Ремонт двигателей
						+e.s-item(href="#") Ремонт культиваторов
						+e.s-item(href="#") Ремонт лодочных моторов
						+e.s-item(href="#") Ремонт мотоблоков
				.col-lg-9
					+sTags()(class="sTags--mb-72")
					+sCall()
					+sTechBrend()
					//-+sTech()
					+sPrice({
						title: 'Cтоимость ремонта бензиновых генераторов Stihl',
					})
					+sCalc({
						title: 'Расчёт стоимости ремонта',
					})(class="sCalc--gray")
					+sMap({
						addClasses: 'sMap--in-box',
						title: 'Сервисные центры Stihl',
					})
					+sInstructions()
					+sAlso()
					+sBrends({
						addClasses: 'sBrends--inBox pt-5 pb-0',
						addContClasses: 'p-0',
						title: 'Производители бензиновых генераторов',
					})
	+footer()